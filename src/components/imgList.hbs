<div class="photo-card">
    {{#each this}}
    <img src="{{webformatURL}}" alt="" loading="lazy"  style="width:100%" />
    <div class="info">
        <p class="info-item">
            <b>Likes: {{likes}}</b>
        </p>
        <p class="info-item">
            <b>Views: {{views}}</b>
        </p>
        <p class="info-item">
            <b>Comments: {{comments}}</b>
        </p>
        <p class="info-item">
            <b>Downloads: {{downloads}}</b>
        </p>
    </div>
    {{/each}}
</div>